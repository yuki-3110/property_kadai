<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.text_field :rent %>円
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.text_field :age %>年
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>

  <hr>
  <% x = 1 %>
  <%=form.fields_for :nearest_stations do |nearest_station| %>
    <h2>最寄駅<%= x %></h2>
    
    <div class="field">
    <%= nearest_station.label :路線名%>
    <%= nearest_station.text_field :line_name %>
    </div>

    <div class="field">
    <%= nearest_station.label :駅名%>
    <%= nearest_station.text_field :station_name %>
    </div>

    <div class="field">
    <%= nearest_station.label :徒歩分数%>
    <%= nearest_station.text_field :walk_time %>分
    </div>
    <% x += 1 %>
  <% end %>

  <div class="actions">
    <%= form.submit"登録する" %>
  </div>
<% end %>
